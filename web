<script type="text/javascript">
function executeURLLink()
{
    kakao.link("talk").send({
        msg : "를 소개합니다 메세지를 전달해보세요.;",
        url : "http://web.aceqr.co.kr",
        appid : "web.aceqr.co.kr",
        appver : "2.0",
        appname : "모바일웹페이지",
        type : "link"
    });

}


function executeKakaoStoryLink()
{
    kakao.link("story").send({   
        post : "http://web.aceqr.co.kr",
        appid : "web.aceqr.co.kr",
        appver : "1.0",
        appname : "모바일웹페이지",
        urlinfo : JSON.stringify({title:"모바일 웹페이지 고민 이렇게 쉽게 해결되다니~.", imageurl:["http://m1.daumcdn.net/photo-media/201209/27/ohmynews/R_430x0_20120927141307222.jpg"], type:"article"})
    });
}

</script>
